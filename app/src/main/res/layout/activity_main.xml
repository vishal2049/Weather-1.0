<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bcg2"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:inputType="text"
        android:text="Delhi"
        android:fontFamily="@font/amaranth"
        android:textAlignment="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:fadingEdgeLength="5dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/autour_one"

                    android:text="37°C"
                    android:textSize="55dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/minmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/autour_one"
                    android:text="30°C/41°C"
                    android:textSize="17dp"
                    android:textStyle="bold">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:text="Haze"
                    android:fontFamily="@font/amaranth"
                    android:textSize="25dp"> </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sun"
                    android:layout_marginLeft="120dp"
                    > </ImageView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/wdetails"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/amaranth"
        android:padding="5dp"
        android:text="Pressure: 1015 hPa\nWind: 4.6 km/h\nHumidity: 30%\n"
        android:textSize="25dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sunrise"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="7dp"
            android:textSize="25dp"
            android:fontFamily="@font/amaranth"
            android:text="Sunrise:6:00AM"
            android:drawableLeft="@drawable/srise"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sunset"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="7dp"
            android:textSize="25dp"
            android:fontFamily="@font/amaranth"
            android:text="Sunset:6:45PM"
            android:drawableLeft="@drawable/sset"
            />


    </LinearLayout>


    <ImageButton
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:background="@null"
        android:src="@drawable/referesh_btn" />


</LinearLayout>